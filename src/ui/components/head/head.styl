@import '../../styles/colors.styl';

:global .logo
  width: 100%;
  height: 50px;
  border-bottom: #009988 1px solid;
  box-shadow: 1px 1px 9px 4px rgba(0,153,136,0.6);
  text-align: center;
  background-image:  url(../../assets/img/CubensisConnect-16.svg);
  background-position: center;
  background-repeat: no-repeat;
  background-size: 104px 68px;

.bigLogo
  align-items: center;
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;

.bigLogoImg
  background-image:  url(../../assets/img/CubensisConnect-16.svg);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 40px;
  text-align: center;
  width: 156px;

.bigLogoTitle
   margin-top: 10px;
   font-weight: 400;
   font-size: 12px;
   color: $white;
